        <?php endforeach; ?>

        <!-- Next page link -->
        <li<?php echo (isset($this->next)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url('admin/'.$this->classType.'/leaderboard', array('gameId' => $this->gameId, 'p' => $this->next)); ?>"><?php echo $this->translate('Next'); ?> &gt;</a>
        </li>

        <!-- Last page link -->
        <li<?php echo (isset($this->next)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url('admin/'.$this->classType.'/leaderboard', array('gameId' => $this->gameId, 'p' => $this->last)); ?>"><?php echo $this->translate('Last'); ?> &gt;&gt;</a>
