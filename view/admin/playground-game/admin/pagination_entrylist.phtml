<?php if ($this->pageCount): ?>
<div class="pagination pagination-centered pagination-small">
    <ul>

        <!-- First page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url('admin/'.$this->classType.'/leaderboard', array('gameId' => $this->gameId, 'p' => $this->first)); ?>">&lt;&lt; <?php echo $this->translate('First'); ?></a>
        </li>

        <!-- Previous page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url('admin/'.$this->classType.'/leaderboard', array('gameId' => $this->gameId, 'p' => $this->previous)); ?>">&lt; <?php echo $this->translate('Previous'); ?></a>
        </li>

        <!-- Numbered page links -->
        <?php foreach ($this->pagesInRange as $page): ?>
        <li<?php echo ($page == $this->current) ? ' class="active"' : ''; ?>>
            <a href="<?php echo $this->url('admin/'.$this->classType.'/leaderboard', array('gameId' => $this->gameId, 'p' => $page)); ?>"><?php echo $page; ?></a>
